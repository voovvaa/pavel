# Скопируйте этот файл в .env и заполните своими данными

# Токен вашего Telegram бота (получить у @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ID чата где будет работать бот (опционально, для ограничения)
# Чтобы получить ID: добавьте бота в чат и отправьте сообщение, 
# ID появится в логах бота
ALLOWED_CHAT_ID=

# Режим разработки (true/false)
DEV_MODE=true

# Путь к файлу личности бота (создается командой bun run patterns)
PERSONALITY_FILE=./personality.json

# OpenAI API ключ (получить на platform.openai.com)
OPENAI_API_KEY=your_openai_api_key_here

# Модель OpenAI для использования
OPENAI_MODEL=gpt-4o-mini

# Режим работы: patterns_only, ai_only, hybrid
AI_MODE=hybrid

# Вероятность использования AI вместо паттернов (0.0-1.0)
AI_PROBABILITY=0.7

