# Токен Telegram бота (получить у @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ID чата (опционально)
ALLOWED_CHAT_ID=

# Режим разработки
DEV_MODE=true

# Путь к файлу личности
PERSONALITY_FILE=./personality.json

# OpenAI API ключ
OPENAI_API_KEY=your_openai_api_key_here

# Модель (будет выбираться интерактивно если не указана)
# OPENAI_MODEL=gpt-5-nano

# Режим работы AI
AI_MODE=hybrid
AI_PROBABILITY=0.8

# Настройки памяти
DATABASE_PATH=./memory.db
MEMORY_DAYS=30
SUMMARY_AFTER_MESSAGES=50
SHORT_TERM_LIMIT=25
CONTEXT_RELEVANCE_THRESHOLD=0.7

# Health Checks
# Частота автоматических проверок (в минутах)
HEALTH_CHECK_INTERVAL=30

# Пороги предупреждений для health check
# Использование памяти в MB
HEALTH_MEMORY_WARNING_MB=500
HEALTH_MEMORY_CRITICAL_MB=1000

# Размер базы данных в MB
HEALTH_DB_WARNING_MB=100
HEALTH_DB_CRITICAL_MB=500

