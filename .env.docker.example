# ВАЖНО: Скопируйте этот файл в .env.docker и заполните значения

# Основные настройки бота
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
ALLOWED_CHAT_ID=your_chat_id_here

# Настройки AI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-5-nano
AI_MODE=hybrid
AI_PROBABILITY=0.8

# Настройки памяти для Docker
DATABASE_PATH=/app/data/memory.db
MEMORY_DAYS=30
SUMMARY_AFTER_MESSAGES=50
SHORT_TERM_LIMIT=25
CONTEXT_RELEVANCE_THRESHOLD=0.7

# Production настройки
DEV_MODE=false
NODE_ENV=production

# Файл личности (монтируется как volume)
PERSONALITY_FILE=/app/chat/result_personality.json