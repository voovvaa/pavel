{
  "name": "digital-personality-bot",
  "version": "1.0.0",
  "description": "Цифровая личность для Telegram чата",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "type-check": "tsc --noEmit",
    "build": "tsc && cp -r src/utils/*.js dist/utils/",
    "lint": "echo 'No linter configured'",
    "test": "echo 'No tests configured'",
    "clean": "rm -rf dist",
    "init-db": "bun run src/utils/init-database.ts",
    "import-history": "bun run src/utils/import-history.js",
    "pattern-extract": "bun run src/analysis/pattern-extractor-cli.ts",
    "image-test": "bun run src/ai/image-tester-cli.ts",
    "health-check": "bun run src/utils/health-check.ts",
    "cache-analyzer": "bun run src/utils/cache-analyzer.ts"
  },
  "keywords": ["telegram", "bot", "ai", "personality"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@inquirer/select": "^4.3.1",
    "node-telegram-bot-api": "^0.66.0",
    "openai": "^5.12.2"
  },
  "devDependencies": {
    "@types/bun": "^1.2.19",
    "@types/node-telegram-bot-api": "^0.64.9",
    "typescript": "^5.7.2"
  }
}
