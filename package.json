{
  "name": "digital-personality-bot",
  "version": "1.0.0",
  "description": "Цифровая личность для Telegram чата",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "prod": "bun run dist/index.js",
    "type-check": "tsc --noEmit",
    "analyze": "bun run src/analyzer.ts",
    "generate-mock": "bun run src/mock-generator.ts",
    "patterns": "bun run src/pattern-extractor-cli.ts"
  },
  "keywords": ["telegram", "bot", "ai", "personality"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "node-telegram-bot-api": "^0.64.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/node-telegram-bot-api": "^0.64.0",
    "typescript": "^5.3.0"
  }
}